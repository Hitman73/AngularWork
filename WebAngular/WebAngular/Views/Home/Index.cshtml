<div class="jumbotron">
    <h1>Тестовое задание</h1>
</div>
<div ng-controller="myCtrl">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    <a href="#" ng-click="sortColumn('Id')">№</a>
                    <span ng-show="sortType == 'Id' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'Id' && sortReverse" class="fa-caret-up"></span>
                </th>
                <th>
                    <a href="#" ng-click="sortColumn('Country')">Страна</a>
                    <span ng-show="sortType == 'Country' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'Country' && sortReverse" class="fa-caret-up"></span>
                </th>
                <th>
                    <a href="#" ng-click="sortColumn('City')">Город</a>
                    <span ng-show="sortType == 'City' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'City' && sortReverse" class="fa-caret-up"></span>
                </th>
                <th>
                    <a href="#" ng-click="sortColumn('Srtreet')">Улица</a>
                    <span ng-show="sortType == 'Srtreet' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'Srtreet' && sortReverse" class="fa-caret-up"></span>
                </th>
                <th>
                    <a href="#" ng-click="sortColumn('Num')">Дом</a>
                    <span ng-show="sortType == 'Num' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'Num' && sortReverse" class="fa-caret-up"></span>
                </th>
                <th>
                    <a href="#" ng-click="sortColumn('Index')">Индекс</a>
                    <span ng-show="sortType == 'Index' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'Index' && sortReverse" class="fa-caret-up"></span>
                </th>
                <th>
                    <a href="#" ng-click="sortColumn('Date')">Дата</a>
                    <span ng-show="sortType == 'Date' && !sortReverse" class="fa-caret-down"></span>
                    <span ng-show="sortType == 'Date' && sortReverse" class="fa-caret-up"></span>
                </th>
            </tr>
            <tr>
                @*<th><button type="button" class="btn btn-default">отфильтровать</button></th>*@
                <th><a class='btn btn-default' href='#' ng-click="filter()"><img src="~/App/image/filte.png" /></a></th>
                <th><input type="text" class="form-control" ng-model="my_filter.f_country"></th>
                <th><input type="text" class="form-control" ng-model="my_filter.f_city"></th>
                <th><input type="text" class="form-control" ng-model="my_filter.f_street"></th>
                <th><input type="text" class="form-control" ng-model="my_filter.f_number"></th>
                <th><input type="text" class="form-control" ng-model="my_filter.f_index"></th>
                <th>
                    <input type="text" name="daterange"  class="form-control" value="01/01/2017 1:30 PM - 01/12/2017 2:00 PM" />
                    <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                <th>
</tr>
        </thead>
        <tbody>
            <tr ng-repeat="adr in ListAddress"> @*Формируем стороки для вывода данных*@
                <td ng-click="send(adr.Id)">{{adr.Id}}</td>
                <td>{{adr.Country}}</td>
                <td>{{adr.City}}</td>
                <td>{{adr.Street}}</td>
                <td>{{adr.Number}}</td>
                <td>{{adr.Index}}</td>
                <td>{{adr.Date.substring(6,19) | date: 'medium'}}</td>
            </tr>
            <tr>
                <td colspan="6" align="center">
                    <div class="pagination-wrap">
                        <ul class="pagination">
                            <li ng-repeat="page in paginationList" ng-click="showPage(page.link)" ng-class="{'active': currentPageNum() == page.link}"><a ng-bind-html="page.name">tr</a></li>
                        </ul>
                    </div>
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>

    
 </div>
<script src="~/Scripts/angular.min.js"></script>
<script type="text/javascript">
        var adrApp = angular.module('adrApp', []);
</script>
<script src="~/Controllers/addressController.js"></script>
<script src="~/App/js/initDateRangePicker.js"></script>